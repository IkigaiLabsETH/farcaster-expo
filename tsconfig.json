{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".", // This should be set to enable path aliases
    "strict": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./*"] // General alias for the root directory
    }
  },
  "extends": "expo/tsconfig.base",
  "exclude": ["node_modules"]
}
